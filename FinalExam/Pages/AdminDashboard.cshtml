@page
@model FinalExam.Pages.AdminDashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<div class="d-flex">
    <!-- Sidebar -->
    <nav class="sidebar bg-white vh-100 d-flex flex-column p-3">
        <button class="btn btn-outline-warning text-secondary mb-3 d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-expanded="false" aria-controls="sidebarMenu">
            Admin
        </button>
        <div class="collapse d-md-block" id="sidebarMenu">
            <ul class="nav flex-column">
                <li class="nav-item mb-3">
                    <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/AdminDashboard" ? "active" : "")" href="/AdminDashboard">
                        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/ManageBusses" ? "active" : "")" href="/ManageBusses">
                        <i class="fa-solid fa-bus me-2"></i>Manage Busses
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/ManageClients" ? "active" : "")" href="/ManageClients">
                        <i class="fas fa-users me-2"></i> Manage Clients
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/ManageDrivers" ? "active" : "")" href="/ManageDrivers">
                        <i class="fa-solid fa-id-card me-2"></i> Manage Drivers
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/ManageRoutes" ? "active" : "")" href="/ManageRoutes">
                        <i class="fa-solid fa-route me-2"></i> Manage Routes
                    </a>
                </li>
                @* <li class="nav-item mb-3">
                    <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/ManageReports" ? "active" : "")" href="/ManageReports">
                        <i class="fa-solid fa-file me-2"></i> Manage Reports
                    </a>
                </li> *@
            </ul>
            <div class="mt-auto">
                <a class="nav-link text-danger" href="/Logout">
                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content flex-grow-1 p-4">
        <!-- Header -->
        <h4 class="text-warning mb-4">Welcome, @Model.Username!</h4>

        <!-- Dashboard Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fa-solid fa-bus fa-3x text-warning mb-3"></i>
                        <h5 class="card-title">Manage Busses</h5>
                        <p class="card-text">Create, edit, and delete Busses for clients!!</p>
                        <a href="/ManageBusses" class="fs-6" style="text-decoration: none;">
                            View <i class="fa-solid fa-angles-right"></i>
                            </a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-users fa-3x text-success mb-3"></i>
                        <h5 class="card-title">Manage Clients</h5>
                        <p class="card-text">Add, edit, or remove clients from the system.</p>
                        <a href="/ManageClients" class="fs-6" style="text-decoration: none;">
                            View <i class="fa-solid fa-angles-right"></i>
                            </a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body text-center">@* 
                        <i class="fas fa-tasks fa-3x text-primary mb-3"></i> *@
                        <i class="fa-solid fa-id-card fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Manage Drivers</h5>
                        <p class="card-text">Add, edit, or remove drivers from the system.</p>
                        <a href="/ManageDrivers" class="fs-6" style="text-decoration: none;">
                            View <i class="fa-solid fa-angles-right"></i>
                            </a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fa-solid fa-route fa-3x text-danger mb-3"></i>
                        <h5 class="card-title">Manage Routes</h5>
                        <p class="card-text">Add, edit, or remove Routes from the system.</p>
                        <a href="/ManageRoutes" class="fs-6" style="text-decoration: none;">
                            View <i class="fa-solid fa-angles-right"></i>
                            </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activities Table -->
        <div class="recent-activities">
            <h3 class="text-warning mb-3">Recent Activities</h3>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Activity</th>
                        <th>Performed By</th>
                        <th>Date & Time</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Added a new bus: Plate #ABC-123</td>
                        <td>Admin</td>
                        <td>2024-12-10 14:32</td>
                        <td class="text-success">Successful</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Updated route: Route #45</td>
                        <td>Admin</td>
                        <td>2024-12-11 10:15</td>
                        <td class="text-warning">Pending</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Deleted driver: ID #D-456</td>
                        <td>Admin</td>
                        <td>2024-12-12 09:45</td>
                        <td class="text-danger">Failed</td>
                    </tr>
                    <tr>
                        <td>4</td>
                        <td>Created a new client account: Jane Smith</td>
                        <td>Admin</td>
                        <td>2024-12-12 11:20</td>
                        <td class="text-success">Successful</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
