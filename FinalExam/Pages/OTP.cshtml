@page
@model FinalExam.Pages.OTPModel
@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="~/css/styleOTP.css" rel="stylesheet">

<div class="d-flex justify-content-center align-items-center vh-50">
    <div class="otp-card text-center p-4 shadow-lg rounded">

         @* <label id="messageLabel" class="text-@Model.MessageColor text-center fs-6">@Model.Message</label> *@

        <form method="post">
        <h1 class="mb-3">OTP Verification</h1>
        <p class="mb-4">Code has been sent to your email</p>
        <div class="otp-card-inputs d-flex justify-content-center gap-3 mb-4">
            <input type="text" name="otp1" maxlength="1" class="form-control text-center" autofocus>
            <input type="text" name="otp2" maxlength="1" class="form-control text-center">
            <input type="text" name="otp3" maxlength="1" class="form-control text-center">
            <input type="text" name="otp4" maxlength="1" class="form-control text-center">
            <input type="text" name="otp5" maxlength="1" class="form-control text-center">
            <input type="text" name="otp6" maxlength="1" class="form-control text-center">
        </div>
        <p class="mb-3">Didn't get the OTP? <a href="#" style="text-decoration: none;">Resend</a></p>
        <button class="btn btn-warning px-5" disabled>Verify</button>
        </form>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/OTPscript.js" asp-append-version="true"></script>
